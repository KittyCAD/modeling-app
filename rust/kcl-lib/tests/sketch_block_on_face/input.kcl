@settings(experimentalFeatures = allow)

len = 2mm
cube = startSketchOn(XY)
  |> startProfile(at = [0, 0])
  |> line(end = [len, 0], tag = $side)
  |> line(end = [0, len])
  |> line(end = [-len, 0])
  |> line(end = [0, -len])
  |> close()
  |> extrude(length = len)

face = faceOf(cube, face = side)

s = sketch(on = face) {
  // Square
  line1 = line(start = [var 0, var 0], end = [var 1mm, var 0])
  line2 = line(start = [var 1mm, var 0], end = [var 1mm, var 1mm])
  line3 = line(start = [var 1mm, var 1mm], end = [var 0, var 1mm])
  line4 = line(start = [var 0, var 1mm], end = [var 0, var 0])
  horizontal(line1)
  vertical(line2)
  horizontal(line3)
  vertical(line4)
  coincident([line1.end, line2.start])
  coincident([line2.end, line3.start])
  coincident([line3.end, line4.start])
  coincident([line4.end, line1.start])
  equalLength([line1, line3])
  equalLength([line2, line4])
}
