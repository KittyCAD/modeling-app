// This tests evaluating if-else expressions.

let a = if true {
  3
} else if true {
  4
} else {
  5
}
assertEqual(a, 3, 0.001, "the 'if' branch gets returned")

let b = if false {
  3
} else if true {
  4
} else {
  5
}
assertEqual(b, 4, 0.001, "the 'else if' branch gets returned")

let c = if false {
  3
} else if false {
  4
} else {
  5
}
assertEqual(c, 5, 0.001, "the 'else' branch gets returned")
